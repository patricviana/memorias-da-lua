  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portal da Lua</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Georgia', serif;
      background: radial-gradient(circle at center, #0b0c10, #000);
      color: #f1f1f1;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      text-align: center;
      overflow: hidden;
    }

    .container {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 0 25px rgba(255, 255, 255, 0.3);
      max-width: 500px;
      animation: fadeIn 2s ease;
    }

    h1 {
      font-size: 2.2rem;
      margin-bottom: 20px;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.6);
    }

    p {
      font-size: 1.1rem;
      margin-bottom: 20px;
      color: #dcdcdc;
    }

    input {
      padding: 10px;
      font-size: 1rem;
      width: 80%;
      border: none;
      border-radius: 10px;
      margin-bottom: 15px;
      text-align: center;
    }

    button {
      padding: 10px 25px;
      font-size: 1rem;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      background: #e0e0e0;
      color: #000;
      transition: all 0.3s ease;
    }

    button:hover {
      background: #fff;
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
    }

    .message {
      margin-top: 15px;
      color: #f88;
      font-style: italic;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px);}
      to { opacity: 1; transform: translateY(0);}
    }
  </style>
