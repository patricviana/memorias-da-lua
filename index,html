<body>
  <div class="container">
    <h1>✦ O Portal da Lua ✦</h1>
    <p id="question">Primeira chave: O que brilha sem pedir nada em troca?</p>
    <input type="text" id="answer" placeholder="Digite sua resposta...">
    <br>
    <button onclick="checkAnswer()">Entrar</button>
    <div class="message" id="message"></div>
  </div>

  <script>
    const steps = [
      {
        question: "Primeira chave: O que brilha sem pedir nada em troca?",
        answer: "a lua"
      },
      {
        question: "Segunda chave: O que a noite guarda em silêncio?",
        answer: "as estrelas"
      },
      {
        question: "Última chave: Quem é capaz de guardar memórias eternas?",
        answer: "o coração"
      }
    ];

    let currentStep = 0;

    function checkAnswer() {
      const input = document.getElementById("answer").value.trim().toLowerCase();
      const message = document.getElementById("message");

      if (input === steps[currentStep].answer) {
        message.style.color = "#9f9";
        message.textContent = "✦ A Lua sorri e abre mais uma passagem...";

        currentStep++;
        if (currentStep < steps.length) {
          setTimeout(() => {
            document.getElementById("question").textContent = steps[currentStep].question;
            document.getElementById("answer").value = "";
            message.textContent = "";
          }, 1200);
        } else {
          setTimeout(() => {
            window.location.href = "home.html"; // leva para seu site principal
          }, 1500);
        }
      } else {
        message.style.color = "#f88";
        message.textContent = "A Lua permanece em silêncio...";
      }
    }
  </script>
</body>
</html>
